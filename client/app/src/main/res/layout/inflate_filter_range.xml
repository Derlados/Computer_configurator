<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inflate_filter_block_tl_attribute_values"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/inflate_filter_range_tv_min_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="viewStart"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"/>

            <TextView
                android:id="@+id/inflate_filter_range_tv_max_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="viewEnd"
                android:paddingTop="10dp"
                android:paddingStart="0dp"
                android:paddingEnd="20dp" />

        </LinearLayout>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/inflate_filter_range_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.0"
            android:valueTo="10.0"
            app:trackColorActive="@color/light_blue"
            app:thumbColor="@color/light_blue"
            app:trackColorInactive="#004657"/>

    </LinearLayout>

</LinearLayout>
