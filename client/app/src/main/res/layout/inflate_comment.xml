<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/inflate_comment_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:adjustViewBounds="true"
            android:layout_weight="0.2"
            android:src="@drawable/ic_user_24"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.78"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inflate_comment_tv_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/inflate_comment_tv_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAlignment="viewEnd"
                    android:paddingEnd="5dp"
                    android:paddingStart="0dp"/>

                <ImageView
                    android:id="@+id/inflate_comment_img_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="3dp"
                    android:paddingStart="3dp"
                    android:src="@drawable/flag_24"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/inflate_comment_tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/inflate_comment_tv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/answer"
        android:textColor="@color/light_blue"/>

</LinearLayout>