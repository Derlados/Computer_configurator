<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#101B5E</item>
        <item name="colorPrimaryDark">#0B1342</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:navigationBarColor">#0B1342</item>
        <item name="colorAccent">#E6E6E6</item>
        <item name="android:itemBackground">#25338E</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
    <style name="build_desc_text_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="block_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/transition_element_3</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:drawableEnd">@drawable/ic_add_24</item>
    </style>
    <style name="block_header_add_more">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Все порты заняты !</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/transition_bt_add_more</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
    <style name="ButtonCategory">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:maxEms">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="android:background">@drawable/transition_gray_blue</item>
        <item name="backgroundTint">@null</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">20dp</item>
    </style>
    <style name="build_desc_text_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="flipPageElement">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CellInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxEms">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DarkAlert" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:background">#393737</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="ExpandComponents" parent="Theme.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="ael_duration">200</item>
        <item name="ael_orientation">vertical</item>
        <item name="ael_expanded">false</item>
        <item name="ael_interpolator">accelerateDecelerate</item>
    </style>
    <style name="auth_field">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:backgroundTint">@color/gray_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gray_blue</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="settings_filed_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:backgroundTint">@color/hint_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="auth_layout_field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="startIconTint">@color/white</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@drawable/ic_error_24</item>
        <item name="errorIconTint">@color/red</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="hintEnabled">false</item>
    </style>
</resources>