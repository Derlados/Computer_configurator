<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/element_2</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">#00000000</item>
    </style>
    <style name="build_desc_text_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#29FAE9</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="block_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/element_3</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:drawableEnd">@drawable/ic_add_24</item>
    </style>
    <style name="ButtonCategory">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:maxEms">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="android:background">#212B4A</item>
        <item name="backgroundTint">@color/element_3</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">20dp</item>
    </style>
    <style name="build_desc_text_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="flipPageElement">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CellInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxEms">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DarkAlert" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:background">#393737</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="ExpandComponents" parent="Theme.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="ael_duration">200</item>
        <item name="ael_orientation">vertical</item>
        <item name="ael_expanded">false</item>
        <item name="ael_interpolator">accelerateDecelerate</item>
    </style>
</resources>