<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.8"
    android:background="@color/background_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonShop"
                android:text="Материнские платы"
                app:icon="@drawable/ic_motherboard_24"/>

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonShop"
                android:text="Процессоры"
                app:icon="@drawable/ic_processor_24" />

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonShop"
                android:text="Видеокарты"
                app:icon="@drawable/ic_gpu_24" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonShop"
                android:text="Накопители HDD"
                app:icon="@drawable/ic_hdd_24"/>

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonShop"
                android:text="Накопители SSD"
                app:icon="@drawable/ic_ssd_24" />

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonShop"
                android:text="Память"
                app:icon="@drawable/ic_ram_24"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonShop"
                android:text="Блоки питания"
                app:icon="@drawable/ic_power_supply_24"/>

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonShop"
                android:visibility="invisible"
                android:text="Видеокарты"
                app:icon="@drawable/ic_gpu_24" />

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonShop"
                android:visibility="invisible"
                android:text="Видеокарты"
                app:icon="@drawable/ic_gpu_24"/>

        </TableRow>

    </TableLayout>

</ScrollView>