                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/CellInfo"
                            android:text="S1151"/>

                        <TextView
                            style="@style/CellInfo"
